#!/bin/bash

while [ $# -gt 0 ]; do
    case "$1" in
        --c9-port)
            C9_PORT=1
        ;;

        --protocol)
            PROTOCOL=1
        ;;
    esac

    shift
done

if [[ $PROTOCOL -eq 1 ]]; then
    echo -n "http"
    if [[ "$CS50_IDE_TYPE" == "online" ]]; then
        echo -n "s"
    fi

    echo -n "://"
fi

echo -n "${C9_HOSTNAME}"

if [[ $C9_PORT -eq 1 ]]; then
    echo ":${C9_PORT}"
fi
